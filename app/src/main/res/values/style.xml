<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textPrimary</item> <!-- Use primary text color -->
        <item name="android:textSize">20sp</item> <!-- Slightly larger text size -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Modern, clean font -->
    </style>


</resources>
